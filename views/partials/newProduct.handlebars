<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Új termék felvitele</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action='/products' method="POST">
                    <div class="form-group">
                        <label for="product-name" class="col-form-label">Megnevezés:</label>
                        <input type="text" class="form-control" name="name" id="product-name">
                    </div>
                    <div class="form-group row">
                        <label for="list" class="col-3">Csoport</label>
                        <select id="list" name="catlist" class="dropdown col-8">
                            <option value="none">Válassz egyet</option>
                            {{#each cat}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="desc" class="col-3 mt-4">Leírás</label>
                        <textarea name="description" id="desc" class=" col-8 mt-4" cols="20" rows="5">{{this.desc}}</textarea>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
                        <button type="submit" class="btn btn-primary">Új felvitele</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
