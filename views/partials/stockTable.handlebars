<div class="col-10 border border-dark p-4">
            <table class="table table-bordered text-center">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Megnevezés</th>
                        <th>Mennyiség</th>
                        <th>Műveletek</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each array}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.quantity}}</td>
                        <td class="text-center">
                            <button class="btn btn-outline-dark" data-toggle="modal" data-target="#{{this.id}}Modal">Szerkesztés</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

{{#each array}}
<div class="modal fade" id="{{this.id}}Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Új termék felvitele</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action='/products' method="POST">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Mennyiség megadása:</label>
                        <input type="number" class="form-control" name="name" id="recipient-name">
                    </div>
                
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
                        <button type="submit" class="btn btn-primary">Új felvitele</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}